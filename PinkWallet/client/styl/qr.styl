// Cordova's QR scanner is displayed behind the webview
// and requires the body to be transparent
body.build-cordova.qr-scanning
  background none transparent !important

// allow button-wrap to stretch outside of .content.container
body.qr-scanning .content
  overflow-x visible

// Instascan QR scanner (web only), displayed similarly to Cordova's
video.qr-video
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index -1

  display none

  body.qr-scanning &
    display block

.qr-scanner
  .indicator
    position absolute
    width 200px
    height 200px
    top 50%
    left 50%
    margin-left -100px
    margin-top -150px

    display none

    body.qr-scanning &
      display block

      @media screen and (max-height: 540px)
        display none

    // scanner line
    &:before
      content ""
      width 100%
      //margin-left -25%
      background-color tomato
      height 1px
      position absolute
      top 50%
      margin-top -100px
      box-shadow 0 0 4px red
      animation scanning 2s infinite, beam .01s infinite

    .bordertop:before, .bordertop:after, .borderbottom:before, .borderbottom:after
       content ''
       position absolute
       width 25%
       height 25%
       border-color #fff
       border-width 2px

    .bordertop:before
       border-style solid none none solid
       top 0
       left 0
    .bordertop:after
       border-style solid solid none none
       top 0
       right 0
    .borderbottom:before
       border-style none none solid solid
       bottom 0
       left 0
    .borderbottom:after
       border-style none solid solid none
       bottom 0
       right 0

  .buttons-wrap
    // fullscreen width, stretch out of .container
    position absolute
    width 100vw
    left calc(-1 * (100vw - 100%) / 2)
    bottom 0
    text-align center

    @media screen and (max-height 510px)
      background transparent !important

@keyframes beam
  50%
    opacity 0

@keyframes scanning
  50%
    transform translateY(200px)

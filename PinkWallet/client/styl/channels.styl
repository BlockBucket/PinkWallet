.channels

  .channel-bar
    height 1.5em !important
    margin-bottom 0.5rem

    .progress-bar
      color #fff

  .status-text
    white-space pre-wrap
    font-size 0.9em

  .list-group-item:not(.active)
    &.p-online.c-active .state
      color var(--success)
    &.p-offline .state, &.c-closed .state
      color var(--danger)
    &.c-opening .state
      color var(--info)
    &.c-closing .state
      color var(--warning)

  .btn-link, .btn-link:hover, .btn-link:focus
    color inherit
    text-decoration underline

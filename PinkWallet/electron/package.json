{
  "name": "spark-wallet",
  "description": "A minimalistic wallet GUI for c-lightning",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "./build.sh"
  },
  "author": "Nadav Ivgi <nadav@shesek.info>",
  "repository": "https://github.com/shesek/spark-wallet",
  "license": "MIT",
  "devDependencies": {
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "browserify-package-json": "^1.0.1",
    "bundle-collapser": "^1.4.0",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "terser": "^4.6.11"
  },
  "build": {
    "appId": "com.spark.wallet",
    "productName": "Spark",
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "afterPack": "./hook-afterPack.js",
    "files": [
      "**/*",
      "build/icon.*",
      "!*.sh",
      "!hook-*.js"
    ],
    "protocols": {
      "name": "Lightning Payment",
      "schemes": [
        "lightning"
      ]
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": "zip"
    },
    "linux": {
      "executableName": "spark-desktop",
      "target": [
        "AppImage",
        "deb",
        "snap",
        "tar.gz"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "artifactName": "${name}-${version}-${os}-setup.${ext}"
    },
    "portable": {
      "artifactName": "${name}-${version}-${os}-portable.${ext}"
    }
  },
  "dependencies": {
    "electron-debug": "^3.1.0",
    "electron-store": "^6.0.0"
  }
}
